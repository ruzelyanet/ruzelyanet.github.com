.slider
	border-radius 5px
	background #E0E0E0
	background -moz-linear-gradient(left top, #E0E0E0, #EEEEEE) repeat scroll 0 0 transparent
	background -webkit-gradient(linear, left top, right bottom, from(#E0E0E0), to(#EEEEEE))
	background linear-gradient(left top, #E0E0E0, #EEEEEE)	
	height 15px
	margin 5px

.thumb
	width 10px
	height 25px
	border-radius 3px
	position relative
	left 10px
	top -5px
	background blue
	cursor pointer

.irs-grid-text
	color #2f1b15
	font-size 13px
	font-weight 700
	line-height 19px
	top 100%
	
.irs-grid-pol
	width 2px
	height 23px
	background #40251f
	&.small
		display none